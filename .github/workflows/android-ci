name: Android CI

env:
  ANDROID_HOME: /home/github/ASDK

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  build:

    runs-on: self-hosted

    steps:
      - uses: actions/checkout@v2
      - name: Set up JDK 11
        uses: actions/setup-java@v2
        with:
          java-version: '11'
          distribution: 'adopt'
      - name: Grant execute permission for gradlew
        working-directory: ./barstore
        run: chmod +x gradlew
      - name: Build with Gradle
        working-directory: ./barstore
        run: bash ./gradlew assembleDebug --stacktrace
      - name: Upload APK
        uses: actions/upload-artifact@v1
        with:
          name: app-debug
          path: ./barstore/app/build/outputs/apk/debug/app-debug.apk
      - name: Clean build files
        working-directory: ./barstore
        run: bash ./gradlew clean
